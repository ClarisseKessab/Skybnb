<div class="d-flex navbar1-container">
  <div class="element1">
    <%= link_to islands_path do %>
      <%= image_tag "Logo.png", alt: "logo-skybnb", width: 200 %>
    <% end %>
  </div>
  <%= simple_form_for @search, url:  search_islands_path, method: :get do |f| %>
      <div class="reservation_navbar" data-controller="datepicker-navbar">
        <div>
          <p class="label-navbar">Location</p>
            <%= f.input :location, label: false, placeholder: "Type a location", class: "question-navbar", input_html: { class: 'form-control', style: 'border-color: initial; background-image: none;' } %>
        </div>
        <div>
          <p class="label-navbar">Arrival and departure dates</p>
          <div class="input-group mb-3">
            <span class="input-group-text">
              <i class="fa-solid fa-calendar"></i>
            </span>
            <%= text_field_tag :date_range, nil,
            data: { datepicker_navbar_target: "dateRange" },
            placeholder: "When?",
            class: "question-navbar" %>
          </div>
        </div>
        <div>
          <p class="label-navbar">Travellers</p>
          <%# Ile me dit de mettre ca car question-navbar s'applique pas bien sur travellers et location %>
          <%# /* CSS pour désactiver les icônes et autres éléments de validation */
          input.form-control {
            border-color: initial !important; /* Priorité pour le style de bordure */
            background-image: none !important; /* Enlever l'image de validation */
          }

          input.form-control:valid,
          input.form-control:invalid {
            background-image: none !important; /* Enlever les images de validation */
          } %>
          <%= f.input :travellers, label: false, placeholder: "Add travellers", class:"question-navbar" , input_html: { class: 'form-control', style: 'border-color: initial; background-image: none;' } %>
        </div>
        <div class="icon_navbar" class="fa-solid fa-magnifying-glass">
          <%# si je mets la classe sur le bouton, le bouton submit ne marche plus! ATTENTION à revoir cette classe %>
          <%= f.button :submit, "" %>
        </div>
      </div>
    <%= f.input :arrival_date, as: :hidden, input_html: { data: { datepicker_navbar_target: "startDate" } } %>
    <%= f.input :departure_date, as: :hidden, input_html: { data: { datepicker_navbar_target: "endDate" } } %>
   <% end %>
   <div class="right-element">
   <% if user_signed_in? %>
    <%= link_to "Logout", destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, class: "btn-deconnect" %>
    <% else %>
    <%= link_to "Sign in", new_user_session_path, class: "btn-deconnect" %>
  <% end %>
    <div class="profile_navbar">
      <%= link_to dashboard_path do %>
      <i class="fas fa-user"></i>
      <% end %>
    </div>
    </div>
</div>
